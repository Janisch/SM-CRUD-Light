<% layout("layouts/boilerplate") %>

<body>
  <form
    action="/profile/<%= user.username %>?_method=PATCH"
    method="POST"
    enctype="multipart/form-data"
    class="d-flex gap-3 mt-1 mb-3 w-100 needs-validation"
    novalidate>
    <div>
      <input id="image" name="image" type="file" accept="image/*" class="visually-hidden" />
      <label for="image" class="m-0 p-0 d-inline-block" style="cursor: pointer">
        <img src="<%= user.image.avatarProfilePage %>" alt="Avatar Ã¤ndern" class="editAvatarImage" />
      </label>
    </div>

    <div class="w-100">
      <h4 class="m-0"><%= user.displayname %></h4>
      <p class="text-muted mb-1">@<%= user.username %></p>

      <textarea name="bio" id="textarea" class="form-control w-100 p-2" required><%= user.bio %></textarea>

      <div class="mt-3 d-flex gap-2">
        <a
          class="btn btn-outline-secondary"
          href="/profile/<%= encodeURIComponent(user.displayname) %>"
          id="button-back"
          >Go back</a
        >
        <button class="btn btn-secondary ms-auto" type="submit" id="button-update">Update</button>
      </div>
    </div>
  </form>
</body>
