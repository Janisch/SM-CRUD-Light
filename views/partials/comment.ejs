<li class="list-group-item <%= isReply ? 'ms-3' : '' %>">
  <div class="d-flex justify-content-between align-items-center">
    <div class="d-flex gap-1">
      <a href="/profile/<%=comment.author.username%>"
        ><img class="avatar" src="<%=comment.author.image?.avatarComment%>" alt=""
      /></a>
      <div>
        <a href="/profile/<%=comment.author.username%>" class="userLink"
          ><strong><%= comment.author.displayname %></strong></a
        >
        <span class="text-muted">@<%= comment.author.username %> • <%= comment.elapsedTime() %></span>
      </div>
    </div>
    <% if(currentUser && comment.author.equals(currentUser._id)){%>
    <div class="dropdown">
      <button class="btn" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        <small class="burgermenu">• • •</small>
      </button>
      <ul class="dropdown-menu">
        <li>
          <form action="/posts/<%=post._id%>/<%=comment._id%>?_method=DELETE" method="POST">
            <button type="submit" class="dropdown-item">Löschen</button>
          </form>
        </li>
      </ul>
    </div>
    <% } %>
  </div>

  <!-- BODY -->
  <p class="mb-2 commentBody"><%= comment.body %></p>

  <!-- FOOTER -->
  <div class="d-flex align-items-center gap-1">
    <!-- Like -->
    <div>
      <form action="/posts/<%=post._id%>/<%=comment._id%>/like" method="POST">
        <button
          type="submit"
          class="heart <%if(currentUser && comment.likes.includes(currentUser._id)){%> liked <%}%> d-flex align-items-center gap-1">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" />
          </svg>
          <span class="text-muted"><%=comment.likesAmount %></span>
        </button>
      </form>
    </div>
    <!-- REPLY BUTTON -->
    <% if(currentUser){ %>
    <button
      class="btn btn-sm text-muted p-0"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#reply-<%= comment._id %>"
      aria-expanded="false">
      Antworten
    </button>
    <% } %>
  </div>

  <!-- COLLAPSE REPLY FORM -->
  <div class="collapse mt-2" data-username="<%=comment.author.username%>" id="reply-<%= comment._id %>">
    <form action="/posts/<%= post._id %>/<%= comment._id %>" method="POST">
      <div class="d-flex gap-2">
        <input
          type="text"
          name="comment[body]"
          class="form-control form-control-sm reply-input"
          placeholder="Antwort schreiben …"
          required />
        <button class="btn btn-outline-secondary btn-sm" type="submit">Posten</button>
      </div>
    </form>
  </div>
</li>
